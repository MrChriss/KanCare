<div class='jumbotron'>
  <h2 class='display-4'>Edit your profile</h2>
  <hr class='my-4'>

  <%= form_for @user do |f| %>
    <div class='form-group'>
      <%= f.label :user_name %>
      <%= f.text_field :nick_name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control-file' %>
    </div>

    <div class='form-group'>
      <%= f.submit "Update", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
